<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Exclude sensitive data from cloud backup -->
        <exclude domain="sharedpref" path="security_prefs.xml" />
        <exclude domain="database" />
        <exclude domain="file" path="downloads/" />
    </cloud-backup>
    <device-transfer>
        <!-- Allow device transfer for user data -->
        <include domain="sharedpref" path="user_prefs.xml" />
        <include domain="file" path="library/" />
    </device-transfer>
</data-extraction-rules>